# LawVriksh Production Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
MYSQL_ROOT_PASSWORD=your_super_secure_root_password_here
MYSQL_DATABASE=lawvriksh_db
MYSQL_USER=lawvriksh_user
MYSQL_PASSWORD=your_secure_db_password_here

# Application Security
SECRET_KEY=your_super_secret_jwt_key_minimum_32_characters_long
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip

# Frontend Configuration
FRONTEND_URL=https://yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration (Gmail SMTP example)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_USE_TLS=true
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=LawVriksh Platform

# Email Configuration (Custom SMTP example)
# SMTP_SERVER=mail.yourdomain.com
# SMTP_PORT=587
# SMTP_USERNAME=noreply@yourdomain.com
# SMTP_PASSWORD=your_email_password
# SMTP_USE_TLS=true
# FROM_EMAIL=noreply@yourdomain.com
# FROM_NAME=LawVriksh Platform

# Domain Configuration
DOMAIN=yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# Optional: External Database (if not using Docker MySQL)
# DATABASE_URL=mysql+pymysql://user:password@host:port/database

# Optional: External Redis (if not using Docker Redis)
# REDIS_URL=redis://host:port/0

# Backup Configuration (optional)
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
